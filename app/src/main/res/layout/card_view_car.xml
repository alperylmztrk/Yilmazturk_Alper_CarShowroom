<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/cardCarBrand"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/margin20"
            android:layout_marginTop="@dimen/margin20"
            android:text=""
            android:textSize="@dimen/text_size24"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/cardCarModel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/margin20"
            android:text=""
            android:textSize="@dimen/text_size20"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/cardCarYear"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/margin20"
            android:layout_marginBottom="@dimen/margin10"
            android:text=""
            android:textSize="@dimen/text_size20" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/margin18"
        android:layout_marginEnd="@dimen/margin50"
        android:orientation="vertical">

        <TextView
            android:id="@+id/cardCarKm"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=""
            android:textSize="@dimen/text_size18" />

        <TextView
            android:id="@+id/cardCarPrice"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin2"
            android:text=""
            android:textSize="@dimen/text_size18" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:layout_margin="@dimen/margin20"
        android:orientation="vertical">

        <ImageButton
            android:id="@+id/cardEditImage"
            android:layout_width="@dimen/width40"
            android:layout_height="@dimen/height35"
            android:layout_marginBottom="@dimen/margin15"
            android:background="@color/image_background"
            android:padding="@dimen/padding3"
            android:src="@drawable/ic_baseline_edit_24" />

        <ImageButton
            android:id="@+id/cardDeleteImage"
            android:layout_width="@dimen/width40"
            android:layout_height="@dimen/height35"
            android:background="@color/image_background"
            android:padding="@dimen/padding3"
            android:src="@drawable/ic_baseline_delete_24" />
    </LinearLayout>


</androidx.cardview.widget.CardView>